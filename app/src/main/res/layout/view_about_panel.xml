<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/panel_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_panel_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Legacy XML block"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_panel_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This part of the screen is rendered using XML layout inside a Compose screen."
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_panel_title"
        app:layout_constraintStart_toStartOf="@id/tv_panel_title"
        app:layout_constraintEnd_toEndOf="@id/tv_panel_title" />

    <Button
        android:id="@+id/btn_panel_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        app:layout_constraintTop_toBottomOf="@id/tv_panel_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>